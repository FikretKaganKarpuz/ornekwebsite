    <script>
        // --- CURSOR GLOW LOGIC (YENİ) ---
        const cursorGlow = document.querySelector('.cursor-glow');

        // Mouse hareketi ile glow'u taşı
        document.addEventListener('mousemove', (e) => {
            // Performans için requestAnimationFrame kullanabilirdik ama basitlik için doğrudan atama yeterli
            cursorGlow.style.left = e.clientX + 'px';
            cursorGlow.style.top = e.clientY + 'px';
        });

        // Tıklanabilir öğelerin üzerine gelince glow efektini büyüt
        const clickables = document.querySelectorAll('a, button, input, textarea, .glass-card');
        clickables.forEach(el => {
            el.addEventListener('mouseenter', () => document.body.classList.add('hovering'));
            el.addEventListener('mouseleave', () => document.body.classList.remove('hovering'));
        });


        // --- Mevcut Mobil Menü Kodları ---
        const menuToggle = document.getElementById('mobile-menu');
        const navMenu = document.querySelector('.nav-menu');
        const navLinks = document.querySelectorAll('.nav-menu a');

        menuToggle.addEventListener('click', () => {
            navMenu.classList.toggle('active');
            // Hamburger ikonu animasyonu
            const bars = document.querySelectorAll('.bar');
            if (navMenu.classList.contains('active')) {
                bars[0].style.transform = "rotate(-45deg) translate(-5px, 6px)";
                bars[1].style.opacity = "0";
                bars[2].style.transform = "rotate(45deg) translate(-5px, -6px)";
            } else {
                bars[0].style.transform = "none";
                bars[1].style.opacity = "1";
                bars[2].style.transform = "none";
            }
        });

        // Linke tıklanınca menüyü kapat
        navLinks.forEach(link => {
            link.addEventListener('click', () => {
                navMenu.classList.remove('active');
                const bars = document.querySelectorAll('.bar');
                bars[0].style.transform = "none";
                bars[1].style.opacity = "1";
                bars[2].style.transform = "none";
            });
        });
    </script>
